<div class="d-flex flex-column justify-content-center align-items-center">
  <%= render "users/shared/error_messages", resource: resource %>
  <h2 class="fw-bold">新規登録</h2>
  <div class="mb-4">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>

      <div class="registration-field field w-50 mx-auto">
        <%= f.label :email %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100" %>
      </div>

      <div class="registration-field field w-50 mx-auto">
        <%= f.label :password, "パスワード (半角大小英数字6文字以上)", class: "password_message" %>
        <%= f.password_field :password, autocomplete: "new-password", class: "w-100" %>
      </div>

      <div class="registration-field field w-50 mx-auto">
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100" %>
      </div>

      <div class="d-flex justify-content-center mt-3 mx-auto">
        <%= f.submit "登録", class: "btn btn-success" %>
      </div>
    <% end %>

    <% unless controller_name == 'sessions' %>
      <%= link_to "ログイン", new_user_session_path, class: "log_in_button" %><br/><br/>
    <% end %>
  </div>
</div>




