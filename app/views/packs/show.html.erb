<div class="container">
  <div class="row justify-content-center mb-5">
    <div class="col-lg-8 col-md-10">
      <div class="card shadow bg-light p-4 text-center">
        <h2><%= @pack.title %></h2>
        <h5><%= @pack.created_at.strftime("%Y年%m月%d日 %H:%M") %></h5>
        <% @topics.each do |topic| %>
          <div class="card shadow bg-gray-100 p-3 my-2 text-center">
            <h6><%= topic["title"] %></h6>
          </div>
        <% end %>
        <div class="d-flex justify-content-between mt-4 align-items-center">
          <div>
            <%= link_to "編集", edit_pack_path(@pack), class: "btn btn-warning mr-2" %>
            <%= link_to "削除", pack_path(@pack), data: { turbo_method: :delete, turbo_confirm: '本当に削除しますか？' }, class: "btn btn-danger" %>
          </div>
          <button id="create-board-button" data-pack-id="<%= @pack.id %>" class="btn btn-primary">パックからボードを作成</button>
        </div>
      </div>
      <%= javascript_include_tag 'create-board' %>
    </div>
  </div>
  <div class="text-right">
    <%= link_to "戻る", packs_path, class: "btn btn-warning" %>
  </div>
</div>