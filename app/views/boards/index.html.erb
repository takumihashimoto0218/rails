<div class="pricing-header px-3 py-3 pt-md-5 pb-md-4 mx-auto text-center">
  <h1 class="display-4">ボード一覧</h1>
</div>
<div class="container">
<div class="container">
  <div class="d-flex flex-wrap justify-content-start"> 
    <% @boards.each do |board| %>
      <div class="card-deck mb-3 text-center mr-3"> 
        <div class="card mb-4 shadow-sm">
          <div class="card-header">
            <h3 class="my-0 font-weight-normal"><%= board.title %></h3>
          </div>
          <div class="card-body">
            <h5 class="card-title pricing-card-title"><%= board.body %></h5>
            <ul class="list-unstyled mt-3 mb-4">
              <li><%= board.created_at %></li>
            </ul>    
            <a href="/boards/<%= board.id %> " class="btn btn-lg btn-block btn-outline-primary">詳細</a>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>


