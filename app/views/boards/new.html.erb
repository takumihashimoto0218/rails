<%= form_with model: @board do |f| %>
  <div class="row m-5 p-5">
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>

  <div id="lists" class="row">
    <%= f.fields_for :lists do |list| %>
    <div class="card">
      <%= render "list_fields", f: list %>
    </div>
    <% end %>
    <div id="detail-association-insertion-point"></div>
    <div class="links">
      <%= link_to_add_association "+Listを追加", f, :lists %>
    </div>
  </div>

  <div class="mt-4 text-end">
    <%= f.submit 'ボードを作成する' %>
  </div>
<% end %>
