<%= form_with model: @board do |f| %>
  <div class="row m-5 p-5">
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :body %>
    <%= f.text_area :body %>
  </div>
  
  <div class="row">
    <%= f.fields_for :lists do |list| %>
      <div class="card">
        <%= render "list_fields", f: list %>
        
        <%= list.fields_for :tasks do |task| %>
          <%= render "task_fields", f: task %>
        <% end %>
        
        <div class="links">
          <%= link_to_add_association "Add Task", list, :tasks %>
          <%= link_to_add_association "Add List", f, :lists %>
        </div> 
      </div>
    <% end %>
  </div>
  
  <div class="mt-4 text-end">
    <%= f.submit 'ボードを作成する' %>
  </div>
<% end %>