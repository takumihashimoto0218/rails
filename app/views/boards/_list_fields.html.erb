<div class="nested-fields">
  <hr>
  <%= f.label :list_title %>
  <%= f.text_field :title %>
  <%= link_to_remove_association "Remove List", f %>
  <div id="tasks">
    <%= f.fields_for :tasks do |task| %>
      <%= render "task_fields", f: task %>
    <% end %>
  </div>
  <div class="links">
    <%= link_to_add_association "+Taskを追加", f, :tasks %>
  </div>
</div>
