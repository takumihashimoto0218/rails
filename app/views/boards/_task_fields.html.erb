<div class="nested-fields field mt-4 bg-light p-4 rounded mb-4 custom-border">
  <div class="mb-3">
    <%= f.label :task_title, class: 'form-label' %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>
  <div class="mb-3">
    <%= f.label :task_body, class: 'form-label' %>
    <%= f.text_area :body, class: 'form-control' %>
  </div>
  <%= link_to_remove_association "Remove Task", f, class: 'btn btn-warning mb-3' %>
</div>

