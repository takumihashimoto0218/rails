<div class="nested-fields field bg-light p-2 rounded mb-4 shadow-sm">
  <div class="d-flex justify-content-between align-items-center mb-2">
    <%= f.label :task_title, "タスクタイトル", class: 'font-weight-bold' %>
    <%= link_to_remove_association raw('<i class="fa-solid fa-xmark"></i>'), f, class: 'btn btn-link' %>
  </div>
  <%= f.text_field :title, class: 'form-control', placeholder: 'タスクのタイトルを入力' %>
  <div class="mb-2">
    <%= f.label :task_body, "タスクの内容", class: 'font-weight-bold' %>
    <%= f.text_area :body, class: 'form-control', rows: '5', placeholder: 'タスクの詳細を記述' %>
  </div>
</div>

