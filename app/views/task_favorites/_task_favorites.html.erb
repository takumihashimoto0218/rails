<% if current_user.already_task_favorited?(task) %>
  <%= button_to task_task_favorites_path(task.id), method: :delete, remote: true, data: {"turbolinks" => false}, class: "btn btn-link" do %>
    <i class="fa-solid fa-heart fa-lg mt-2"></i>
  <% end %>
  <div class="ml-1 text-dark"><%= task.task_favorites.count %></div>
<% else %>
  <%= button_to task_task_favorites_path(task.id), method: :post, remote: true, data: {"turbolinks" => false}, class: "btn btn-link" do %>
    <i class="fa-regular fa-heart fa-lg"></i>
  <% end %>
  <div class="ml-1 text-dark"><%= task.task_favorites.count %></div>
<% end %>